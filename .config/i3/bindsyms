bindsym $mod+b exec ~/.hotkey.sh 'mod+b' 'exec $br --new-window'
bindsym $mod+o exec ~/.hotkey.sh 'mod+o' 'exec $br --new-window https://www.office.com'
bindsym $mod+a exec ~/.hotkey.sh 'mod+a' 'exec $br --new-window https://aur.archlinux.org'
bindsym $mod+d exec ~/.hotkey.sh 'mod+d' 'exec remmina --enable-fullscreen -c rdp://swarma:swarmagents2050@192.168.0.119:3389'

bindsym $mod+F1 exec ~/.hotkey.sh 'mod+F1' 'exec kitty ranger Desktop'
bindsym $mod+F2 exec ~/.hotkey.sh 'mod+F2' 'exec kitty ranger Documents'
bindsym $mod+F3 exec ~/.hotkey.sh 'mod+F3' 'exec kitty ranger Downloads'
bindsym $mod+F4 exec ~/.hotkey.sh 'mod+F4' 'exec kitty ranger Public'
bindsym $mod+F5 exec ~/.hotkey.sh 'mod+F5' 'exec kitty ranger Music'
bindsym $mod+F6 exec ~/.hotkey.sh 'mod+F6' 'exec kitty ranger Pictures'
bindsym $mod+F7 exec ~/.hotkey.sh 'mod+F7' 'exec kitty ranger Videos'
bindsym $mod+F8 exec ~/.hotkey.sh 'mod+F8' 'exec kitty ranger Templates'
