# hardware control
bindsym Shift+F1 exec ~/.hotkey.sh 'Shift+F1' 'exec pactl set-default-sink bluez_output.41_42_F3_F5_21_38.1'
bindsym Shift+F2 exec ~/.hotkey.sh 'Shift+F2' 'exec pactl set-default-source alsa_input.usb-SN0002_2K_USB_Camera_46435000_P020300_SN0002-02.mono-fallback'

set $br google-chrome-stable

bindsym $mod+equal exec ~/.hotkey.sh 'mod+equal' 'exec python .chat.py'

# 截图
bindsym $mod+apostrophe exec ~/.hotkey.sh 'mod+apostrophe' 'exec grim $(xdg-user-dir PICTURES)/$(date +'%s.png')'
bindsym $mod+Shift+apostrophe exec ~/.hotkey.sh 'mod+Shift+apostrophe' 'exec grim -g "$(slurp)"'
bindsym $mod+Alt+apostrophe exec ~/.hotkey.sh 'mod+Alt+apostrophe' 'exec wf-recorder -f $(xdg-user-dir VIDEOS)/$(date +'%s.mp4')'
bindsym $mod+Alt+Shift+apostrophe exec ~/.hotkey.sh 'mod+Alt+Shift+apostrophe' 'exec pkill wf-recorder'

# 自定义快捷键
bindsym $mod+comma exec ~/.hotkey.sh 'mod+comma' 'exec i3-msg exit'
bindsym $mod+semicolon exec ~/.hotkey.sh 'mod+semicolon' 'exec reboot'
bindsym $mod+period exec ~/.hotkey.sh 'mod+period' 'exec poweroff'

bindsym $mod+m exec ~/.hotkey.sh 'mod+m' 'exec mathematica'
