}

bindsym $mod+s mode "swarma"
mode "swarma" {
	bindsym Return exec $br --new-window swarma.org; mode "default"
	bindsym c exec $br --new-window campus.swarma.org; mode "default"
	bindsym d exec $br --new-window pattern.swarma.org/grafana; mode "default"
	bindsym g exec $br --new-window gitlab.swarma.org; mode "default"
	bindsym p exec $br --new-window pattern.swarma.org; mode "default"
	bindsym r exec $br --new-window research.swarma.org; mode "default"
        bindsym w exec $br --new-window wiki.swarma.org; mode "default"
        # back to normal: Enter or Escape or $mod+s
        bindsym Escape mode "default"
	bindsym $mod+s mode "default"
}

bindsym $mod+w mode "wiki"
mode "wiki" {
        bindsym Return exec $br --new-window wikipedia.org; mode "default"
        bindsym a exec $br --new-window wiki.archlinux.org; mode "default"
        # back to normal: Enter or Escape or $mod+w
        bindsym Escape mode "default"
	bindsym $mod+w mode "default"
}
