	bindsym i exec $br --new-window instagram.com; mode "default"
	bindsym j exec $br --new-window jd.com; mode "default"
	bindsym m exec $br --new-window mail.google.com; mode "default"
	bindsym p exec $br --new-window glados.network/console; mode "default"
	bindsym q exec $br --new-window mail.qq.com; mode "default"
	bindsym Shift+q exec $br --new-window exmail.qq.com/login; mode "default"
        bindsym s exec $br --new-window speak.ef.com; mode "default"
        bindsym t exec $br --new-window taobao.com; mode "default"
