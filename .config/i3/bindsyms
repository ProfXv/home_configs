bindsym $mod+c mode "chat"
mode "chat" {
        bindsym Return exec $br --new-window chat.openai.com; mode "default"
	bindsym Shift+c exec $br --new-window copilot.microsoft.com; mode "default"
	bindsym b exec $br --new-window www.baichuan-ai.com/chat; mode "default"
	bindsym c exec $br --new-window claude.ai; mode "default"
	bindsym g exec $br --new-window gemini.google.com; mode "default"
	bindsym k exec $br --new-window kimi.moonshot.cn; mode "default"
	bindsym m exec $br --new-window metaso.cn; mode "default"
	bindsym p exec $br --new-window perplexity.ai; mode "default"
	bindsym s exec $br --new-window stepchat.cn; mode "default"
	bindsym t exec $br --new-window tongyi.aliyun.com; mode "default"
	bindsym w exec $br --new-window yiyan.baidu.com; mode "default"
	bindsym x exec $br --new-window xinghuo.xfyun.cn; mode "default"
	bindsym z exec $br --new-window chatglm.cn/main/detail; mode "default"
	bindsym Space exec $br --new-window huggingface.co/spaces/lmsys/chatbot-arena-leaderboard; mode "default"
        # back to normal: Enter or Escape or $mod+c
        bindsym Escape mode "default"
	bindsym $mod+c mode "default"
}

